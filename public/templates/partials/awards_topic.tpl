<!-- IF posts.nsRewards.length -->
<div class="ns-awards-topic">
    <!-- BEGIN nsRewards -->
    <div class="ns-awards-topic__item">
        <img class="ns-awards-topic__image teaser-pic img-responsive" src="{posts.nsRewards.award.url}" alt="{posts.nsRewards.award.name}" title="{posts.nsRewards.count}x {posts.nsRewards.award.name}"
             data-toggle="awards-tooltip" data-placement="top" data-original-title="{posts.nsRewards.award.name}" />
        <span class="ns-awards-topic__count">{posts.nsRewards.count}</span>
    </div>
    <!-- END nsRewards -->
</div>
<!-- ENDIF posts.nsRewards.length -->
